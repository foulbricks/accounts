<div id="page">
  <% if flash[:alert] %>
    <p class="flash-error"><%= flash[:alert] %></p>
  <% end %>
  <% if flash[:notice] %>
    <p class="flash-notice"><%= flash[:notice] %></p>
  <% end %>
</div>

<div>
	<h3>Please Login</h3>
	<%= form_tag sessions_path, method: "post" do %>
		<p>
			<%= label_tag :username %>:
			<%= text_field_tag  :username %>
		</p>
		<p>
			<%= label_tag :password, "Password:" %>
			<%= password_field_tag :password %>
		</p>
		<p>
			<%= submit_tag "Login" %>
		</p>
	<% end %>
	<p><%= link_to "Create Account", new_user_path %></p>
	<p><%= link_to "Forgot Password", :controller => "users", :action => "forgot_password" %>
</div>
